<div class="readonly-data">

  <h2 <%= @payment.get_style %>><%= @payment %></h2>

  <p>
    <strong><%= Payment.human_attribute_name 'partner_id' %></strong>:
    <%= @payment.partner.to_s %>
  </p>

  <p>
    <strong><%= Payment.human_attribute_name 'date' %></strong>:
    <%= l @payment.date, :format => :long %>
  </p>

  <p>
    <strong><%= Payment.human_attribute_name 'concept' %></strong>:
    <%= @payment.concept %>
  </p>

  <p>
    <strong><%= Payment.human_attribute_name 'amount' %></strong>:
    <%= @payment.amount %>
  </p>

</div>
<div class="form-actions">
  <%= link_to t('label.edit'), edit_payment_path(@payment), :class => 'btn btn-primary' if can? :update, @payment %>
  <div class="pull-right">
    <%= link_to t('label.list'), payments_path %>
  </div>
</div>
