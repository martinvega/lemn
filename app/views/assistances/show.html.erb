<div class="readonly-data">
  <h2><%= t 'activerecord.models.assistance' %></h2>

  <p>
    <strong><%= Assistance.human_attribute_name 'date' %></strong>:
    <%= l @assistance.date, :format => :long %>
  </p>
  <p>
    <strong><%= Assistance.human_attribute_name 'partner_id' %></strong>:
    <%= @assistance.partner.to_s %>
  </p>

</div>
<nav class="form-actions">
  <%= link_to t('label.edit'), edit_assistance_path(@assistance), :class => 'btn btn-primary' if can? :update, @assistance %>
  <div class="pull-right">
    <%= link_to t('label.list'), assistances_path %>
  </div>
</nav>
