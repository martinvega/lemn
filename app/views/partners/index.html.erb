<% if @partners.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Partner.human_attribute_name 'name' %></th>
            <th><%= Partner.human_attribute_name 'lastname' %></th>
            <th><%= Partner.human_attribute_name 'address' %></th>
            <th><%= Partner.human_attribute_name 'phone' %></th>
            <th><%= Partner.human_attribute_name 'movil_phone' %></th>
            <th><%= Partner.human_attribute_name 'email' %></th>
            <th><%= Partner.human_attribute_name 'admission_date' %></th>
            <th><%= Partner.human_attribute_name 'birth_date' %></th>
            <th><%= Partner.human_attribute_name 'document' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @partners.each do |partner| %>
            <tr>
              <td><%= partner.name %></td>
              <td><%= partner.lastname %></td>
              <td><%= partner.address %></td>
              <td><%= partner.phone %></td>
              <td><%= partner.movil_phone %></td>
              <td><%= partner.email %></td>
              <td><%= partner.admission_date %></td>
              <td><%= partner.birth_date %></td>
              <td><%= partner.document %></td>
              <td><%= link_to_show partner %></td>
              <td><%= link_to_edit edit_partner_path(partner) if can? :update, partner %></td>
              <td><%= link_to_destroy partner if can? :destroy, partner %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@partners) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.partners.new', :default => :'label.new'),
    new_partner_path, :class => 'btn btn-primary'
  ) if can? :create, Partner %>
</div>
