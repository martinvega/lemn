<%= simple_form_for(@partner) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :mobile_phone %>
    <%= f.input :email %>
    <%= f.input :document %>
    <%= f.input :birth_date, :as => :string, :input_html => { :class => 'calendar', :'data-year' => true } %>
    <%= f.input :admission_date, :as => :string, :input_html => { :class => 'calendar', :'data-year' => true } %>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.input :lock_version, :as => :hidden %>
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
